<header class="header">
  <nav class="header-nav clearfix">

    <h1 class="header-logo">
      <a href="/">Jounce Streaming<br /> Music Radio</a>
    </h1>

    <ul class="header-list clearfix">
      <% if current_user %>
        <li><a href="<%= signout_url %>">Logout</a></li>
      <% else %>
        <li><a href="<%= login_page_url %>">Login</a></li>
      <% end %>
      <% if current_user && current_user.is_premium %>
      <li><a href="<%=unsubscribe_from_premium_url %>">Unsubscribe</a></li>
      <% else %>
      <li><a href="<%=secure_pay_url %>">Go Premium</a></li>
      <% end %>
      <li><a href="#">Language</a></li>
      <li><a href="#">Settings</a></li>
    </ul>

  </nav>
</header>

<div id="image-filter"></div>


<main class="content clearfix">
  <div id="video-backing">
    <video id="commercial-video" controls preload autoplay height="100%" loop>
      <source src="https://s3.amazonaws.com/odla/video/Jounce+Commercial.mp4" type="video/mp4">
      Your browser does not support HTML5 video.
    </video>
  </div>


  <div id="informational-text">
    <div id="finally-text">
      Finally,
    </div>

    <div id="jounce-info-text">
      Jounce
    </div>
    <div id="jounce-free-text">
      Free.
    </div>






    <a id="sign_in" href="<%= login_as_guest_url %>" title="" class="oauth-login">
      <span class="oauth-login__text">Start Now&nbsp;&nbsp;<br/>

      No Signup Required.</span>
    </a>
  </div>


  </div>




</main>
